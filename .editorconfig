# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
# Set default charset
charset = utf-8
# Trim whitespaces
trim_trailing_whitespace = true

# Tab indentation
[*.php]
indent_style = tab

[.devcontainer/**, .docker/**, config/**.yaml]
indent_style = space
indent_size = 2

[{composer.json}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
